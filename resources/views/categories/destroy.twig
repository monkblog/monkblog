{% extends 'admin::layout' %}

{% block content %}

    <p>Are you sure you want to delete "{{ category.title }}?" This cannot be undone.</p>

    <a href="{{ route( 'admin.categories.index' ) }}" class="button">Cancel</a>
    {{ form_model( category, { route : [ 'admin.categories.destroy', category.id ], method : 'delete' } ) }}
    {{ form_submit( 'Delete Forever', { 'class' : 'button alert' } ) }}
    {{ form_close() }}

{% endblock %}
