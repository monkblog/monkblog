{% extends 'admin::layout' %}

{% block content %}
    {{ form_model( user, { route : [ 'admin.users.savePassword', user.id ], method : 'put' } ) }}
        {{ form_hidden( 'first_name' ) }}
        {{ form_hidden( 'last_name' ) }}
        {{ form_hidden( 'display_name' ) }}
        {{ form_hidden( 'email' ) }}

        {{ form_label( 'old_password', 'Old Password' ) }}
        {{ form_password( 'old_password', { required : 'required' } ) }}

        {{ form_label( 'password', 'New Password' ) }}
        {{ form_password( 'password', { required : 'required' } ) }}

        {{ form_label( 'password_confirmation', 'Confirm new Password' ) }}
        {{ form_password( 'password_confirmation', { required : 'required' } ) }}

        {{ form_submit( 'Update Password', { class : 'button' } ) }}
    {{ form_close() }}
{% endblock %}
